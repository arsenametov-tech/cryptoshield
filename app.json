{
  "expo": {
    "name": "Cryptoshield",
    "slug": "cryptoshield",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fastshot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.cryptoshield.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0e1a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cryptoshield.app"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "backgroundColor": "#0a0e1a",
      "themeColor": "#00ffc8",
      "name": "Cryptoshield - AI Crypto Security",
      "shortName": "Cryptoshield",
      "description": "AI-powered crypto security scanner for detecting scams, honeypots, and fraud",
      "lang": "ru",
      "scope": "/cryptoshield/",
      "display": "standalone",
      "startUrl": "/cryptoshield/",
      "orientation": "portrait"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "29bbb5d7-cafd-4726-892d-e2b4830a3d78"
      }
    }
  }
}
